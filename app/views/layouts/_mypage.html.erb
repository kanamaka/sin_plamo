 <table>
 <td>
 <%= attachment_image_tag @customer, :profile_image, class: "sizene" %>
 </td>
 <tr>
  <td style="border:none;" class="table">名前</td><br>
  <td style="border:none;" class="table"><%= @customer.name %></td><br>
 </tr>
 <tr>
  <td style="border:none;" class="table">自己紹介<br</td>
  <td style="border:none;" class="table"><%= @customer.profile %></td><br>
 </tr>
 <tr>
  <td style="border:none;" class="table">フォロー数</td>
  <td style="border:none;" class="table"><%= @customer.friends.count %></td>
 </tr>
 <tr>
  <td>
   <% unless current_customer == @customer %>
    <% if current_customer.following?(@customer) %>
    <%= button_to 'フォロー解除', customer_friend_path(current_customer.friends.find_by(follower: @customer)), method: :delete, class: "btn " %>
    <% else %>
    <%= button_to 'フォロー', customer_friend_path(@customer), class: "btn " %>
    <% end %>
   <% end %>
  </td>
 </tr>
 <tr>
  <th style="border:none;">
   <%= link_to '会員情報を編集する', edit_customer_path(current_customer.id), class: "btn " %><br>
   <%= link_to '作品を投稿する！', new_opu_path(current_customer.id), class: "btn " %><br>
   <%= link_to '質問でもしてみる', new_question_path(current_customer.id), class: "btn " %>
  </th>
 </tr>
  <table id="customer-table" class="table mt-3">
  </table>