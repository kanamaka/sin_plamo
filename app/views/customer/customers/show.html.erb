<header>
 <%= render 'layouts/header' %>
</header>
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-4'>
   <h2 class="plo_name">登録情報</h2>
    <%= render 'layouts/mypage' %>
  </div>
   <div class='col-md-7 offset-md-1'>
    <table>
     <h2><%= @customer.name %>さんの投稿一覧</h2>
     <td></td>
     <td></td>
    <thead>
     <tr width="900">
      <td style="border:none;" width="300">作品画像</td>
      <td style="border:none;" width="300">作品名</td>
    </tr>
    </thead>
    <tbody>
     <tr>
      <% @opera.each do |opus| %>
      <% if opus.customer_id.to_i == current_customer.id %>
      <tr width="250">
       <td style="border:none;" width="300">
        <%= link_to opu_path(opus.id) do %>
        <%= attachment_image_tag(opus.opus_images[0], :image, class: "size") %>
        <% end %>
        <td style="border:none;" width="300"><%= opus.opus_name %></td>
        <td style="border:none;" width="300"><%= link_to "修正！", edit_opu_path(opus.id), class: "btn  btn-block" %></td>
        <td style="border:none;" width="300"><%= link_to "削除しちゃう？", opu_path(opus.id), method: :delete, data: {confirm: "本当に削除しますか？"},  class: "btn btn-block" %></td>
       </td>
      </tr>
      <% end %>
      <% end %>
      </tr>
    </tbody>
   </table>
   </div>
 </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>