<header>
 <%= render 'layouts/header' %>
</header>
<div class="container-fluid">
 <h2 class="section-top"><span class="fas fa-robot" aria-hidden="true"></span>作る予定を建てる！</h2>
 <div class="col-md-3 col-sm-12 col-xs-12">
  <%= form_with(model: @calendar, url: customer_calendars_path, local: true) do |f| %>
  <label for="menu">タイトル</label>
  <p><%= f.text_field :title%></p>
  <label for="parts">箇所</label>
  <p><%= f.select :content, [["head", "head"], ["body", "body"], ["arm", "arm"], ["waist", "waist"], ["leg", "leg"],["backpack", "bakcpack"],["wepon", "wepon"],["file", "file"],["painting", "painting"],["surfacer", "surfacer"]], include_blank: "選択して下さい" %></p>
  <label for="start_time">予定日</label>
  <p><%= f.datetime_select :start_time%></p>
  <%= f.submit "予定を入れる", class: "btn btn-sm btn-hachiss" %>
  <% end %>
 </div>
<div class="col-md-9 col-sm-12 col-xs-12">
 <%= month_calendar event: @customer.calendar do |date, calendar| %>
  <%= date %>
  <% @calendars.each do |calendar| %>
   <div></div>
	 <% end %>
 <% end %>
  <table class="calendar table table-bordered">
   <thead>
    <tr>
					<th>タイトル</th>
					<th>箇所</th>
					<th>予定日</th>
				</tr>
   </thead>
   <% @calendars.each do |calendar| %>
    <tbody>
     <tr>
      <td><%= calendar.title %></td>
      <td><%= calendar.content %></td>
				  <td><%= calendar.start_time.strftime("%Y-%m-%d %H:%M") %></td>
     </tr>
    </tbody>
   <% end %>
  </table>
</div>
 </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>