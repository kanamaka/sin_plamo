<header>
 <%= render 'layouts/header' %>
</header>
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-4'>
　  <%= render 'layouts/mypage' %>
   </div>
  <div class='col-md-8'>
   <table class='table table-hover table-inverse width'>
    <tr>
      <h3>作品を探す</h3>
      <%= form_with url: search_path, method: :get, local: true do |f| %>
　    <%= f.text_field :keyword, value: @keyword %>
　    <%= f.submit "検索" %>
　    <% end %>
     </td>
     <td>
      <% @opera.each do |opus| %>
      <%= opus.name %>
      <% end %>
    <thead width="900"><h1>投稿一覧</h1>
     <tr>
       <th style="border:none;" width="300">作品画像</th>
       <th style="border:none;" width="300">タイトル</th>
       <th style="border:none;" width="300">スキ！</th>
      </td>
     </tr>
    </thead>
    <tbody width="1000">
     <tr>
      <% @opera.each do |opus| %>
       <td style="border:none;" width="300">
        <%= link_to opu_path(opus.id) do %>
        <%= attachment_image_tag(opus.opus_images[0], :image, class: "sizee") %>
        <td style="border:none;" width="300"><%= opus.opus_name %></td>
        <% end %>
        <td style="border:none;" width="100">
         <% if opus.customer_id.to_i != current_customer.id %>
         <% if opus.favorited_by?(current_customer) %>
          <%= link_to opu_favorites_path(opus), method: :delete,  class: "fa fa-thumbs-up" do %>
          <%= opus.favorites.count %>
          <% end %>
         <% else %>
          <%= link_to opu_favorites_path(opus), method: :post, class: "fa fa-thumbs-up" do %>
          <%= opus.favorites.count %>
          <% end %>
         <% end %>
         <% end %>
        <td style="border:none;" width="300">
         <% if opus.customer_id.to_i == current_customer.id %>
         <%= link_to "修正！", edit_opu_path(opus.id), class: "btn btn-success btn-block" %>
         <%= link_to "削除しちゃう？", opu_path(opus.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-success btn-block" %>
         <% end %>
        </td>
       </td>
      </td>
    </tr>
   </tbody>
     <% end %>
   </table>
  </div>
 </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>