<header>
 <%= render 'layouts/header' %>
</header>
 <div class='container px-5 px-sm-0'>
  <div class='row'>
   <div class='col-md-4'>
    <h3>作品を探す</h3>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
　  <%= f.text_field :keyword, value: @keyword %>
　  <%= f.submit "検索" %>
　  <% end %>
   </div>
   <div class='col-md-7 offset-md-5'>
    <table class='table table-hover table-inverse width'>
     <thead>
      <h1>投稿一覧</h1>
       <tr>
        <th style="border:none;">作品画像</th>
        <th style="border:none;">タイトル</th>
      </tr>
      <tr>
     <% @opera.each do |opus| %>
       <td style="border:none;"><%= attachment_image_tag opus, :image, format: 'jpeg', fallback: "logo.jpg", class: "size"%></td>
       <td style="border:none;"><%= opus.opus_name %></td>
       <td style="border:none;">
        <% if @customer.id == current_customer.id %>
         <%= link_to "修正してやる！", edit_opu_path(@opus), class: "btn btn-success btn-block" %>
        <% end %>
       </td>
       <td style="border:none;">
        <% if @customer.id == current_customer.id %>
         <%= link_to "削除しちゃう？", opu_path(@opus.id), method: :delete, data: {confirm: "本当に削除しますか？"},  class: "btn btn-success btn-block" %>
        <% end %>
       </td>
      </tr>
     <% end %>
      </tr>
　   </thead>
    </table>
   </div>
  </div>
 </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>