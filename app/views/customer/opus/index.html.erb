<header>
 <%= render 'layouts/header' %>
</header>
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-4'>
    <h3>作品を探す</h3>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
　  <%= f.text_field :keyword, value: @keyword %>
　  <%= f.submit "検索" %>
　  <% end %>
　  <%= render 'layouts/mypage' %>
   </div>
  <div class='col-md-8'>
   <table class='table table-hover table-inverse width'>
    <thead><h1>投稿一覧</h1>
     <tr>
      <th style="border:none;">作品画像</th>
      <th style="border:none;">タイトル</th>
      <th style="border:none;">スキ！</th>
     </tr>
     <tr>
      <% @opera.each do |opus| %>
       <td style="border:none;">
        <%= link_to opu_path(opus.id) do %>
        <%= attachment_image_tag(opus.opus_images[0], :image, class: "sizee") %>
        <td style="border:none;"><%= opus.opus_name %></td>
        <% end %>
        <td style="border:none;">
         <% if opus.customer_id.to_i != current_customer.id %>
         <% if opus.favorited_by?(current_customer) %>
          <%= link_to opu_favorites_path(opus), method: :delete,  class: "fa fa-thumbs-up" do %>
          <%= opus.favorites.count %>
          <% end %>
         <% else %>
          <%= link_to opu_favorites_path(opus), method: :post, class: "fa fa-thumbs-up" do %>
          <%= opus.favorites.count %>
          <% end %>
         <% end %>
         <% end %>
        <td style="border:none;">
         <% if opus.customer_id.to_i == current_customer.id %>
         <%= link_to "修正！", edit_opu_path(opus), class: "btn btn-success btn-block" %>
         <% end %>
        </td>
        <td style="border:none;">
         <% if opus.customer_id.to_i == current_customer.id %>
         <%= link_to "削除しちゃう？", opu_path(opus), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-success btn-block" %>
         <% end %>
        </td>
       </td>
      </td>
    </tr>
     <% end %>
    </thead>
   </table>
  </div>
 </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>