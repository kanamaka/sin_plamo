<header>
 <%= render 'layouts/header' %>
</header>
 <div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-4'>
   <h2 class="plo_name"><%= @customer.name %>さんのプロフ</h2>
   <%= render 'layouts/mypage2opu' %>
  </div>
   <div class='col-md-7 offset-md-1'>
    <table>
     <tr width="900">
      <td style="border:none;" width="300">作品名<span class="offset-md-1"><h2><%= @opera.opus_name %></h2></span></td>
      <td style="border:none;" width="300">コメント<span class="offset-md-1"><h2><%= @opera.opus_explanation %></h2></span></td>
      <td style="border:none;" width="300">作品タグ<span class="offset-md-1"><td><br><% @opera.tags.each do |tag| %><td><h2><%= tag.name %></h2></td><% end %>
      </span>
       </td>
      </td>
     </tr>
    </table>
    <tbody>
     <tr>
      <td>
        <% @opera.opus_images.each do |image| %>
        <td><%= attachment_image_tag image, :image, class: "sizen" %></td>
        <% end %>
       </td>
     </tr>
     </tbody>
    <tfoot>
   　<td>
   　<%= form_with(model: @comment, url: opu_comments_path(@customer), local: true) do |f| %>
     <%= f.text_field :comment, placeholder: "素敵なコメントを" %>
     <%= f.submit "送信する" %>
     <% end %>
   　</td>
   　 <tr>
   　 <td>コメント一覧</td><br>
   　  <% @comments.each do |comment| %>
    　 <td>
    　  <%= @customer.name %>
    　  <%= comment.comment %>
    　</td>
    　<td>
    　　 <%= @customer.name %>
    　 </td>
   　  <% end %>
   　 </tr>
    </tfoot>
   </div>
 </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>