<header>
 <%= render 'layouts/header' %>
</header>
 <div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3.5'>
   <h2 class="plo_name"><%= @customer.name %>さんのプロフ</h2>
   <%= render 'layouts/mypage2opu' %>
  </div>
   <div class='col-md-5'>
    <table>
     <tr>
      <td>作品名<h2><%= @opera.opus_name %></h2></td>
      <td style="border:none;">コメント<%= @opera.opus_explanation %></td>
      <td>作品タグ</td><td><% @opera.tags.each do |tag| %><%= tag.name %><% end %></td>
     </tr>
    </table>
    <tbody>
     <tr>
      <td>
        <% @opera.opus_images.each do |image| %>
        <td><%= attachment_image_tag image, :image, class: "sizen" %></td>
        <% end %>
       </td>
     </tr>
     </tbody>
   </div>
     <div class='col-md-3.5'>
      <% if @opera.customer_id.to_i != current_customer.id %>
   　  <%= form_with(model: @comment, url: opu_comments_path(@customer), local: true) do |f| %>
      <%= f.text_field :comment, placeholder: "素敵なコメントを" %>
      <%= f.submit "送信する" %>
      <% end %>
      <% end %>
      コメント一覧
   　  <% @comments.each do |comment| %>
   　  <div>
   　    <%= @customer.name %>
   　  </div>
    　 <%= comment.comment %><br>
    　 <%=link_to "削除", opu_comments_path(comment.id), method: :delete %>
   　  <% end %>
     </div>
   　 </tr>
  </div>
</div>
<footer>
 <%= render 'layouts/footer' %>
</footer>